<div class="title">
  <a href="/photos" class="title-logo"> photos </a>
</div>

<div class="signup">

  <div class="signup-title">新規登録</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :　なまえ %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" , id: "field-title" %>
    </div>

    <div class="field">
      <%= f.label :　プロフィール写真 %>
      <br>
      <br>
      <%= f.file_field :image, id: "avatar" %>
    </div>

    <div class="field">
      <%= f.label :　メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,id: "field-title" %>
    </div>

    <div class="field">
      <%= f.label :　パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上を入力してください)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" ,id: "field-title"%>
    </div>

    <div class="field">
      <%= f.label :　パスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,id: "field-title"%>
    </div>

    <%# <%= link_to 'Signin with Google', user_omniauth_authorize_path(:google_oauth2) %>

    <%= link_to '/auth/google_oauth2' %>

    <div class="actions">
      <%= f.submit "登録" ,id: "signup-button"%>
    </div>
  <% end %>



</div>

<%= render partial:"photos/footer"%>